{
    "name": "article",
    "version": "1.0.0",
    "main": "dist/index.js",
    "type": "module",
    "imports": {
        "@/*": "./src/*"
    },
    "scripts": {
        "seed": "tsx --env-file .env src/seed.ts",
        "dev": "tsx --watch --env-file .env src/index.ts",
        "dev:staging": "tsx --watch --env-file .env.staging src/index.ts",
        "dev:prod": "tsx --watch --env-file .env.production src/index.ts",
        "start": "node --env-file .env dist/index.js",
        "build": "tsc -p tsconfig.build.json",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "test": "vitest",
        "test:run": "vitest --run",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "db:init": "env $(cat .env | xargs) tools/init-database.sh",
        "db:generate": "npx drizzle-kit generate",
        "db:migrate": "npx drizzle-kit migrate",
        "db:studio": "npx drizzle-kit studio --port 4000",
        "dc:up": "docker-compose -f docker-compose.yml up",
        "dc:down": "docker-compose -f docker-compose.yml down"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "@libsql/client": "^0.14.0",
        "@t3-oss/env-core": "^0.12.0",
        "drizzle-orm": "^0.39.3",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "postgres": "^3.4.5",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.20.0",
        "@faker-js/faker": "^9.5.0",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.4",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.7",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.24.1",
        "@vitest/coverage-v8": "^3.0.6",
        "@vitest/eslint-plugin": "^1.1.31",
        "drizzle-kit": "^0.30.4",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-define-config": "^2.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-perfectionist": "^4.9.0",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-vitest": "^0.5.4",
        "globals": "^15.15.0",
        "jiti": "^2.4.2",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.1",
        "vitest": "^3.0.6"
    }
}
